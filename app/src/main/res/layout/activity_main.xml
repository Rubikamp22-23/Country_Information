<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple_200">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Country_Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Information"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/australia_layout"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@color/purple_300"
        app:layout_constraintTop_toBottomOf="@+id/Country_Information"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/australia_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/astralia"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>